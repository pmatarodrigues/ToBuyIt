<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/imagem_registar"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:text="Nome de utilizador"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="15sp" />
    <EditText
        android:id="@+id/campo_username_registar"
        android:layout_width="217dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:inputType="textPersonName"
        />

    <TextView
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:text="Palavra-Passe"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        />

    <EditText
        android:id="@+id/campo_pass_registar"
        android:layout_width="217dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:inputType="textPassword"
        />

    <TextView
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:text="Confirmar Palavra-Passe"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        />
    <EditText
        android:id="@+id/campo_confpass_registar"
        android:layout_width="217dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/aviso_registar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        />

    <Spinner
        android:id="@+id/registar_perguntaseguranca"
        android:layout_width="217dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:entries="@array/opcoes_perguntaseguranca"
        android:inputType="textPassword"
        />

    <EditText
        android:id="@+id/registar_perguntaseguranca_resposta"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:hint="Escreva a resposta"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/botao_voltar_ao_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:text="Voltar ao login"
        android:onClick="voltarALogin"
        android:textColor="@color/colorPrimary"
        android:textSize="10sp"
        />

    <Button
        android:id="@+id/botao_registar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/side_nav_bar"
        android:text="@string/botao_registar"
        android:onClick="registar"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        />


</LinearLayout>

</ScrollView>